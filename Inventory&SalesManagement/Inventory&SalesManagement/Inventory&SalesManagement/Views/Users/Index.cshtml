@model IEnumerable<Inventory_SalesManagement.Models.Entities.User>
@{
    ViewData["Title"] = "Manage Staff";
}

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card-modern">
            <div class="card-header-modern d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="fw-bold text-dark mb-0"><i class="fa-solid fa-users-gear me-2 text-primary"></i>System Users</h5>
                    <small class="text-muted">Manage access levels</small>
                </div>
                <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">
                    <i class="fa-solid fa-user-plus me-2"></i>Add User
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-modern align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Role</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle me-2 d-flex align-items-center justify-content-center" style="width:32px; height:32px;">
                                            <i class="fa-solid fa-user text-secondary"></i>
                                        </div>
                                        @item.Username
                                    </div>
                                </td>
                                <td>
                                    @if (item.Role == "Admin")
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger border border-danger">Admin</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success">Staff</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary border-0">
                                        <i class="fa-solid fa-pen-to-square text-primary"></i>
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Delete user @item.Username?');">
                                        <button type="submit" class="btn btn-sm btn-outline-secondary border-0">
                                            <i class="fa-solid fa-trash text-danger"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>