@model Inventory_SalesManagement.Models.Entities.User
@{
    ViewData["Title"] = "Add User";
}

<div class="container d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card-modern mt-5">
            <div class="card-header-modern bg-white border-bottom">
                <h4 class="fw-bold text-dark mb-0">Add New User</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control" placeholder="Username" required />
                        <label asp-for="Username">Username</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="HashedPassword" type="password" class="form-control" placeholder="Password" required />
                        <label asp-for="HashedPassword">Password</label>
                    </div>

                    <div class="form-floating mb-4">
                        <select asp-for="Role" class="form-select">
                            <option value="Staff">Staff</option>
                            <option value="Admin">Admin</option>
                        </select>
                        <label asp-for="Role">Assign Role</label>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-light text-muted">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">Create User</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>