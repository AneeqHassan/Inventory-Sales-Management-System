@model Inventory_SalesManagement.Models.Entities.SalesOrderManagement

@{
    ViewData["Title"] = "Edit Sale";
}

<div class="container d-flex justify-content-center">
    <div class="col-md-8">
        <div class="card-modern mt-5">
            <div class="card-header-modern bg-white border-bottom">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="fw-bold text-dark mb-0">Edit Sale Record</h4>
                    <span class="badge bg-warning text-dark">Invoice #@Model.OrderNumber</span>
                </div>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="OrderNumber" />
                    <input type="hidden" asp-for="OrderDate" />
                    <input type="hidden" asp-for="SalesPersonId" />

                    <div class="alert alert-info small">
                        <i class="fa-solid fa-circle-info me-2"></i>
                        Changing quantity here will not automatically adjust stock levels. Please handle returns separately.
                    </div>

                    <div class="row g-3">
                        <div class="col-md-12">
                            <div class="form-floating">
                                <select asp-for="ProductId" class="form-select" asp-items="ViewBag.ProductId"></select>
                                <label asp-for="ProductId">Product</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Quantity" class="form-control" type="number" />
                                <label asp-for="Quantity">Quantity</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="UnitPrice" class="form-control" />
                                <label asp-for="UnitPrice">Unit Price ($)</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="TotalAmount" class="form-control" readonly />
                                <label asp-for="TotalAmount">Total Amount (Auto-calc on Save)</label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4 pt-3 border-top gap-2">
                        <a asp-action="Index" class="btn btn-light text-muted">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4 shadow-sm">Update Record</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}