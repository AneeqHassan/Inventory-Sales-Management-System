@model Inventory_SalesManagement.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="fade-in-up">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">Dashboard Overview</h2>
            <p class="text-muted small">Real-time insights into your inventory performance</p>
        </div>
        <div>
            <span class="badge bg-white text-secondary shadow-sm p-2 border">
                <i class="fa-regular fa-calendar me-2"></i> @DateTime.Now.ToString("MMMM dd, yyyy")
            </span>
        </div>
    </div>

    <div class="row mb-4 g-3">
        <div class="col-md-3">
            <div class="card-modern p-3 d-flex flex-row align-items-center justify-content-between">
                <div>
                    <small class="text-muted fw-bold text-uppercase" style="font-size: 0.75rem;">Total Revenue</small>
                    <h4 class="fw-bold text-dark mb-0 mt-1">@Model.TotalRevenue.ToString("C0")</h4>
                </div>
                <div class="bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center" style="width:48px; height:48px;">
                    <i class="fa-solid fa-sack-dollar fa-lg"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-modern p-3 d-flex flex-row align-items-center justify-content-between">
                <div>
                    <small class="text-muted fw-bold text-uppercase" style="font-size: 0.75rem;">Total Orders</small>
                    <h4 class="fw-bold text-dark mb-0 mt-1">@Model.TotalOrders</h4>
                </div>
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center" style="width:48px; height:48px;">
                    <i class="fa-solid fa-cart-shopping fa-lg"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-modern p-3 d-flex flex-row align-items-center justify-content-between">
                <div>
                    <small class="text-muted fw-bold text-uppercase" style="font-size: 0.75rem;">Active Products</small>
                    <h4 class="fw-bold text-dark mb-0 mt-1">@Model.TotalProducts</h4>
                </div>
                <div class="bg-info bg-opacity-10 text-info rounded-circle d-flex align-items-center justify-content-center" style="width:48px; height:48px;">
                    <i class="fa-solid fa-box-open fa-lg"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-modern p-3 d-flex flex-row align-items-center justify-content-between border-danger border-opacity-25" style="border-left: 4px solid #ef4444;">
                <div>
                    <small class="text-danger fw-bold text-uppercase" style="font-size: 0.75rem;">Low Stock Alerts</small>
                    <h4 class="fw-bold text-danger mb-0 mt-1">@Model.LowStockCount</h4>
                </div>
                <div class="bg-danger bg-opacity-10 text-danger rounded-circle d-flex align-items-center justify-content-center" style="width:48px; height:48px;">
                    <i class="fa-solid fa-triangle-exclamation fa-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4 g-4">
        <div class="col-md-8">
            <div class="card-modern h-100">
                <div class="card-header-modern">
                    <h6 class="fw-bold mb-0 text-dark"><i class="fa-solid fa-chart-line me-2 text-primary"></i>Revenue per Order (Last 10)</h6>
                </div>
                <div class="card-body">
                    <canvas id="revenueLineChart" style="max-height: 300px;"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card-modern h-100">
                <div class="card-header-modern">
                    <h6 class="fw-bold mb-0 text-dark"><i class="fa-solid fa-chart-pie me-2 text-primary"></i>Top Selling Products</h6>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <div style="width: 100%; max-width: 280px;">
                        <canvas id="productDoughnutChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card-modern">
                <div class="card-header-modern d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold mb-0 text-danger"><i class="fa-solid fa-bolt me-2"></i>Critical Stock Levels</h6>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-sm btn-outline-secondary" style="font-size: 0.75rem;">View All</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-modern align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Barcode</th>
                                <th class="text-end">Stock Left</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.LowStockProducts.Count == 0)
                            {
                                <tr><td colspan="3" class="text-center text-muted p-4">All stock levels are healthy!</td></tr>
                            }
                            else
                            {
                                @foreach (var item in Model.LowStockProducts)
                                {
                                    <tr>
                                        <td class="fw-bold">@item.Name</td>
                                        <td class="text-muted small">@item.Barcode</td>
                                        <td class="text-end">
                                            <span class="badge bg-danger bg-opacity-10 text-danger">@item.StockQuantity</span>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card-modern p-4 text-center d-flex flex-column justify-content-center h-100 bg-primary bg-opacity-10 border-0">
                <h4 class="fw-bold text-primary mb-3">Quick Actions</h4>
                <div class="d-flex justify-content-center gap-3">
                    <a asp-controller="SalesOrderManagements" asp-action="Create" class="btn btn-primary shadow-sm py-2 px-4">
                        <i class="fa-solid fa-plus me-2"></i>New Sale
                    </a>
                    <a asp-controller="Products" asp-action="Create" class="btn btn-white border shadow-sm py-2 px-4 text-primary bg-white">
                        <i class="fa-solid fa-box me-2"></i>Add Product
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // --- Data from Server ---
    const productLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ProductLabels));
    const productData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ProductData));

    const orderLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.OrderLabels));
    const orderData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.OrderRevenueData));

    // --- 1. Line Chart (Revenue) ---
    const ctxLine = document.getElementById('revenueLineChart').getContext('2d');
    new Chart(ctxLine, {
        type: 'line',
        data: {
            labels: orderLabels,
            datasets: [{
                label: 'Revenue ($)',
                data: orderData,
                borderColor: '#6366f1', // Indigo
                backgroundColor: 'rgba(99, 102, 241, 0.1)',
                borderWidth: 2,
                pointBackgroundColor: '#ffffff',
                pointBorderColor: '#6366f1',
                pointRadius: 4,
                tension: 0.4, // Smooth curves
                fill: true
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { display: false }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: { borderDash: [5, 5] }
                },
                x: {
                    grid: { display: false }
                }
            }
        }
    });

    // --- 2. Doughnut Chart (Products) ---
    const ctxDoughnut = document.getElementById('productDoughnutChart').getContext('2d');
    new Chart(ctxDoughnut, {
        type: 'doughnut',
        data: {
            labels: productLabels,
            datasets: [{
                data: productData,
                backgroundColor: [
                    '#6366f1', // Indigo
                    '#10b981', // Emerald
                    '#f59e0b', // Amber
                    '#ec4899', // Pink
                    '#64748b'  // Slate
                ],
                borderWidth: 0,
                hoverOffset: 4
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { position: 'bottom', labels: { usePointStyle: true, padding: 20 } }
            }
        }
    });
</script>