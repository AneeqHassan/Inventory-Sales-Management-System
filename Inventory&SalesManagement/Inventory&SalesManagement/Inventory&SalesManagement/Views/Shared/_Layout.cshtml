<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light fixed-top bg-white border-bottom shadow-sm" style="height: 64px;">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-cube me-2"></i>IMS <span class="text-dark fw-light">Pro</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ms-4">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item me-3"><a class="nav-link text-secondary" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-chart-pie me-1"></i> Dashboard</a></li>
                            <li class="nav-item me-3"><a class="nav-link text-secondary" asp-controller="Products" asp-action="Index"><i class="fa-solid fa-box me-1"></i> Products</a></li>
                            <li class="nav-item me-3"><a class="nav-link text-secondary" asp-controller="Suppliers" asp-action="Index"><i class="fa-solid fa-truck me-1"></i> Suppliers</a></li>
                            <li class="nav-item me-3"><a class="nav-link text-secondary" asp-controller="SalesOrderManagements" asp-action="Index"><i class="fa-solid fa-receipt me-1"></i> Sales</a></li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-danger fw-medium" asp-controller="Users" asp-action="Index">
                                        <i class="fa-solid fa-users-gear me-1"></i> Manage Staff
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark fw-medium" href="#" role="button" data-bs-toggle="dropdown">
                                    <div class="d-inline-flex align-items-center justify-content-center bg-primary text-white rounded-circle me-2" style="width:32px; height:32px;">
                                        @User.Identity.Name.Substring(0, 1).ToUpper()
                                    </div>
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg">
                                    <li><a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout"><i class="fa-solid fa-right-from-bracket me-2"></i> Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            @* --- UPDATED LOGIC HERE --- *@
                            @* Only show Sign In button if we are NOT already on the Login page *@
                            @if (ViewData["Title"]?.ToString() != "Login")
                            {
                                <li class="nav-item">
                                    <a class="btn btn-primary btn-sm px-4 rounded-pill" asp-controller="Auth" asp-action="Login">Sign In</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="margin-top: 80px; padding-bottom: 60px;">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>