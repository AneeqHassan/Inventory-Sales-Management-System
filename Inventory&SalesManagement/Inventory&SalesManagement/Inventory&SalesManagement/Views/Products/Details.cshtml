@model Inventory_SalesManagement.Models.Entities.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container d-flex justify-content-center" style="min-height: 80vh;">
    <div class="col-md-6">
        <div class="card-modern mt-5">
            <div class="card-header-modern bg-white border-bottom d-flex justify-content-between align-items-center">
                <h4 class="fw-bold text-dark mb-0"><i class="fa-solid fa-box me-2 text-primary"></i>Product Details</h4>
                <span class="badge bg-light text-dark border">ID: #@Model.Id</span>
            </div>
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fa-solid fa-cube fa-2x"></i>
                    </div>
                    <h3 class="fw-bold">@Model.Name</h3>
                    <p class="text-muted">@Model.Barcode</p>
                </div>

                <ul class="list-group list-group-flush mb-4">
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                        <span class="text-muted">Price</span>
                        <span class="fw-bold fs-5 text-success">@Model.Price.ToString("C")</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                        <span class="text-muted">Current Stock</span>
                        @if (Model.StockQuantity < 5)
                        {
                            <span class="badge bg-danger">Low Stock: @Model.StockQuantity</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@Model.StockQuantity Available</span>
                        }
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                        <span class="text-muted">Supplier</span>
                        <span class="fw-bold text-dark"><i class="fa-solid fa-truck-field me-2 text-secondary"></i>@Model.Supplier?.Name</span>
                    </li>
                </ul>

                <div class="d-flex justify-content-center gap-2">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 shadow-sm"><i class="fa-solid fa-pen me-2"></i>Edit</a>
                    }

                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>