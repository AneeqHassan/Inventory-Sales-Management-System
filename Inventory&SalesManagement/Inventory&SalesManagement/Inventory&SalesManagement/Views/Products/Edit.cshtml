@model Inventory_SalesManagement.Models.Entities.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container d-flex justify-content-center" style="min-height: 80vh;">
    <div class="col-md-8">
        <div class="card-modern mt-5">
            <div class="card-header-modern bg-white border-bottom">
                <h4 class="fw-bold text-dark mb-0"><i class="fa-solid fa-pen-to-square me-2 text-primary"></i>Edit Product</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Name" class="form-control" placeholder="Product Name" />
                                <label asp-for="Name">Product Name</label>
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Barcode" class="form-control" placeholder="Barcode" />
                                <label asp-for="Barcode">Barcode</label>
                            </div>
                            <span asp-validation-for="Barcode" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Price" class="form-control" placeholder="Price" />
                                <label asp-for="Price">Price ($)</label>
                            </div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="StockQuantity" class="form-control" placeholder="Stock" />
                                <label asp-for="StockQuantity">Stock Quantity</label>
                            </div>
                            <span asp-validation-for="StockQuantity" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <select asp-for="SupplierId" class="form-select" asp-items="ViewBag.SupplierId"></select>
                                <label asp-for="SupplierId">Supplier</label>
                            </div>
                            <span asp-validation-for="SupplierId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4 pt-3 border-top gap-2">
                        <a asp-action="Index" class="btn btn-light text-muted">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4 shadow-sm">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}