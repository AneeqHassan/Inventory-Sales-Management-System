@model Inventory_SalesManagement.Models.Entities.Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="container d-flex justify-content-center" style="min-height: 80vh;">
    <div class="col-md-8">
        <div class="card-modern mt-5">
            <div class="card-header-modern bg-white border-bottom">
                <h4 class="fw-bold text-dark mb-0">
                    <i class="fa-solid fa-box-open me-2 text-primary"></i>Add New Product
                </h4>
                <small class="text-muted">Enter product details and stock information</small>
            </div>

            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Name" class="form-control" placeholder="Product Name" />
                                <label asp-for="Name">Product Name</label>
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Barcode" class="form-control" placeholder="Barcode" />
                                <label asp-for="Barcode">Barcode / SKU</label>
                            </div>
                            <span asp-validation-for="Barcode" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Price" class="form-control" placeholder="Price" type="number" step="0.01" />
                                <label asp-for="Price">Unit Price ($)</label>
                            </div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="StockQuantity" class="form-control" placeholder="Quantity" type="number" />
                                <label asp-for="StockQuantity">Initial Stock Quantity</label>
                            </div>
                            <span asp-validation-for="StockQuantity" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <select asp-for="SupplierId" class="form-select" asp-items="ViewBag.SupplierId">
                                    <option value="">-- Select Supplier --</option>
                                </select>
                                <label asp-for="SupplierId">Supplier</label>
                            </div>
                            <span asp-validation-for="SupplierId" class="text-danger small"></span>
                            <div class="form-text text-end">
                                <small>Don't see the supplier? <a asp-controller="Suppliers" asp-action="Create" class="text-decoration-none">Add new here</a></small>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4 pt-3 border-top gap-2">
                        <a asp-action="Index" class="btn btn-light text-muted">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4 shadow-sm">
                            <i class="fa-solid fa-plus me-2"></i>Create Product
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}