@model Inventory_SalesManagement.Models.Entities.Supplier

@{
    ViewData["Title"] = "Create Supplier";
}

<div class="container d-flex justify-content-center" style="min-height: 80vh;">
    <div class="col-md-8">
        <div class="card-modern mt-5">
            <div class="card-header-modern bg-white border-bottom">
                <h4 class="fw-bold text-dark mb-0">
                    <i class="fa-solid fa-truck-fast me-2 text-primary"></i>Register Supplier
                </h4>
                <small class="text-muted">Add a new vendor to your network</small>
            </div>

            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                    <div class="row g-3">
                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="Name" class="form-control" placeholder="Company Name" />
                                <label asp-for="Name">Company / Supplier Name</label>
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Email" class="form-control" placeholder="Email" type="email" />
                                <label asp-for="Email">Email Address</label>
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Phone" class="form-control" placeholder="Phone" />
                                <label asp-for="Phone">Phone Number</label>
                            </div>
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <textarea asp-for="Address" class="form-control" placeholder="Address" style="height: 100px"></textarea>
                                <label asp-for="Address">Office Address</label>
                            </div>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4 pt-3 border-top gap-2">
                        <a asp-action="Index" class="btn btn-light text-muted">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4 shadow-sm">
                            <i class="fa-solid fa-save me-2"></i>Save Supplier
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}