@model Inventory_SalesManagement.Models.Entities.Supplier

@{
    ViewData["Title"] = "Supplier Details";
}

<div class="container d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card-modern mt-5">
            <div class="card-body p-5 text-center">
                <div class="mb-4">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="fa-solid fa-building fa-2x"></i>
                    </div>
                </div>

                <h3 class="fw-bold text-dark mb-1">@Model.Name</h3>
                <span class="badge bg-light text-secondary border mb-4">Supplier ID: @Model.Id</span>

                <div class="text-start bg-light p-4 rounded-3 mb-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3 text-primary"><i class="fa-solid fa-envelope fa-lg"></i></div>
                        <div>
                            <small class="text-muted d-block">Email Address</small>
                            <span class="fw-bold">@Model.Email</span>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3 text-primary"><i class="fa-solid fa-phone fa-lg"></i></div>
                        <div>
                            <small class="text-muted d-block">Phone Number</small>
                            <span class="fw-bold">@Model.Phone</span>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="me-3 text-primary"><i class="fa-solid fa-location-dot fa-lg"></i></div>
                        <div>
                            <small class="text-muted d-block">Address</small>
                            <span class="fw-bold">@Model.Address</span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center gap-2">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 shadow-sm">Edit Profile</a>
                    }

                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>