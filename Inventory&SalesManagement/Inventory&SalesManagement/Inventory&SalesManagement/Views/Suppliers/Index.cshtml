@model IEnumerable<Inventory_SalesManagement.Models.Entities.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card-modern">
            <div class="card-header-modern d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="fw-bold text-dark mb-0"><i class="fa-solid fa-truck me-2 text-primary"></i>Supplier Directory</h5>
                    <small class="text-muted">Manage vendor contact details</small>
                </div>
                <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">
                    <i class="fa-solid fa-plus me-2"></i>New Supplier
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-modern align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.Name</td>
                                <td><a href="mailto:@item.Email" class="text-decoration-none text-muted"><i class="fa-regular fa-envelope me-1"></i> @item.Email</a></td>
                                <td><span class="text-muted"><i class="fa-solid fa-phone me-1"></i> @item.Phone</span></td>
                                <td class="text-truncate" style="max-width: 200px;">@item.Address</td>

                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary border-0">
                                        <i class="fa-solid fa-pen-to-square text-primary"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary border-0">
                                        <i class="fa-solid fa-circle-info text-info"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary border-0">
                                        <i class="fa-solid fa-trash text-danger"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>