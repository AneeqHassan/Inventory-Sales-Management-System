@model Inventory_SalesManagement.Models.Entities.User;

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center align-items-center" style="min-height: 75vh;">
    <div class="col-md-5 col-lg-4">
        <div class="card-modern p-4">
            <div class="text-center mb-4">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 64px; height: 64px;">
                    <i class="fa-solid fa-fingerprint fa-2x"></i>
                </div>
                <h4 class="fw-bold text-dark">Welcome Back</h4>
                <p class="text-muted small">Please sign in to continue</p>
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger d-flex align-items-center mb-3 p-2 rounded-3 small">
                    <i class="fa-solid fa-circle-exclamation me-2"></i> @ViewBag.ErrorMessage
                </div>
            }

            <form asp-action="Login" asp-controller="Auth">
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Username" required />
                    <label class="text-muted">Username</label>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="HashedPassword" type="password" class="form-control" placeholder="Password" required />
                    <label class="text-muted">Password</label>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-3 fw-bold shadow-sm">
                    Sign In <i class="fa-solid fa-arrow-right ms-2"></i>
                </button>
            </form>
        </div>
        <div class="text-center mt-4">
            <small class="text-muted">Inventory Management System &copy; 2026</small>
        </div>
    </div>
</div>